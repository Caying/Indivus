<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_round_box_r8"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">

    <ImageView
        android:id="@+id/reply_recyclerview_profile_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/detailview_bulblignt"
        android:background="@drawable/background_white_round_box_r5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/reply_recyclerview_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/reply_recyclerview_profile_img"
        app:layout_constraintTop_toTopOf="@+id/reply_recyclerview_profile_img"
        android:text="Jiyong Lee"
        android:textColor="#6E6D71"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/reply_recyclerview_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reply_recyclerview_profile_name"
        app:layout_constraintBottom_toTopOf="@+id/reply_recyclerview_reply_time"
        app:layout_constraintLeft_toRightOf="@+id/reply_recyclerview_profile_img"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:text="짧은댓글"
        android:textColor="#000000"
        android:textSize="12sp"

        />
    <TextView
        android:id="@+id/reply_recyclerview_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reply_recyclerview_reply"
        app:layout_constraintLeft_toRightOf="@+id/reply_recyclerview_profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="20분 전"
        android:textColor="#858585"
        android:textSize="12sp"
        android:layout_marginBottom="9dp"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="18dp">

        <Button
            android:id="@+id/reply_reply_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/small_reply"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/reply_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/reply_reply_btn"
            android:text="55"
            android:textColor="#908F95"
            android:textSize="10sp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="20dp"
            />
        <Button
            android:id="@+id/reply_bulb_btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/small_bulb"
            app:layout_constraintLeft_toRightOf="@+id/reply_reply_count"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/reply_bulb_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/reply_bulb_btn"
            app:layout_constraintRight_toRightOf="parent"
            android:text="60"
            android:textColor="#908F95"
            android:textSize="10sp"
            android:layout_marginLeft="3dp"
            />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>