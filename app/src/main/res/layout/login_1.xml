<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="78dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/email"
        android:layout_width="284dp"
        android:layout_height="69dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/email_icon"
            android:src="@drawable/email_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/email"
            app:layout_constraintRight_toRightOf="@+id/email"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintTop_toTopOf="@+id/email"
            app:layout_constraintBottom_toBottomOf="@+id/email"
            app:layout_constraintVertical_bias="0.8" />
        <EditText
            android:id="@+id/email_tx"
            android:hint="Email"
            android:textColorHint="#88ffffff"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/email_icon"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@+id/email"
            app:layout_constraintBottom_toBottomOf="@+id/email"
            app:layout_constraintVertical_bias="0.8"/>
        <View
            android:background="#88ffffff"
            android:layout_width="284dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="@id/email"
            app:layout_constraintBottom_toBottomOf="@id/email"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pw"
        android:layout_width="284dp"
        android:layout_height="63dp"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/password_icon"
            android:src="@drawable/password_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/pw"
            app:layout_constraintRight_toRightOf="@+id/pw"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintTop_toTopOf="@+id/pw"
            app:layout_constraintBottom_toBottomOf="@+id/pw"
            app:layout_constraintVertical_bias="0.8"/>

        <EditText
            android:id="@+id/pw_tx"
            android:hint="Password"
            android:textColorHint="#88ffffff"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/password_icon"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@+id/pw"
            app:layout_constraintBottom_toBottomOf="@+id/pw"
            app:layout_constraintVertical_bias="0.8"
            />
        <View
            android:background="#88ffffff"
            android:layout_width="284dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="@id/pw"
            app:layout_constraintBottom_toBottomOf="@id/pw"/>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pw"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/login_button"/>
    <Button
        android:id="@+id/pw_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/facebook_button"
        />
    <Button
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="56dp"
        android:background="@drawable/signup"
        />






</android.support.constraint.ConstraintLayout>