<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_category_sign_up_card"
    android:layout_width="88dp"
    android:layout_height="110dp"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="8dp"
    android:alpha="0.5"
    android:layout_marginTop="7.5dp"
    android:layout_marginBottom="7.5dp"
    android:layout_marginLeft="6.5dp"
    android:layout_marginRight="6.5dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="88dp"
        android:layout_height="110dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/item_category_sign_up_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/item_category_sign_up_img"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/background_white_round_box_r8"
            android:src="@drawable/contents_icon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/item_category_sign_up_text"
            android:layout_width="88dp"
            android:layout_height="22dp"
            android:text="제목"
            android:textSize="15sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>