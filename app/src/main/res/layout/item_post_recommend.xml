<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_recommend_card"
    android:layout_width="131dp"
    android:layout_height="120dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="#efefef"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="2.5dp"
    android:layout_marginRight="2.5dp"
    android:layout_marginBottom="36dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/post_recommend_card_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/post_recommend_card_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_round_box_r8"
            android:src="@drawable/imageex1"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/post_recommend_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="10sp"
            android:textColor="#000000"
            android:layout_marginTop="7dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/post_recommend_card_image"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/post_recommend_card_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소제목"
            android:textColor="#000000"
            android:textSize="6sp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_recommend_card_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>