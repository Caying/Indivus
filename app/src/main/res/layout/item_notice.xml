<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="78dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_white_round_box_r5"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <TextView
        android:id="@+id/item_notice_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="댓글"
        android:textSize="12sp"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/item_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:text="1분 전"
        android:textSize="12sp"
        android:textColor="#95989a"
        />
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="#d5d5d5"
        app:layout_constraintTop_toBottomOf="@+id/item_notice_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        />
    <ImageView
        android:id="@+id/item_notice_profile_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/image_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_notice_type"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/imageex1"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/item_notice_text"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/item_notice_type"
        app:layout_constraintLeft_toRightOf="@+id/item_notice_profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="8dp"
        android:text="~~~님이\n댓글을 달았습니다"
        android:textSize="13dp"
        android:textColor="#000000"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />



</android.support.constraint.ConstraintLayout>