<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="6dp">

    <ImageView
        android:id="@+id/reply_reply_recyclerview_profile_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/detailview_bulblignt"
        android:background="@drawable/background_white_round_box_r5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp" />
    <TextView
        android:id="@+id/reply_reply_recyclerview_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/reply_reply_recyclerview_profile_img"
        app:layout_constraintTop_toTopOf="@+id/reply_reply_recyclerview_profile_img"
        android:layout_marginStart="8dp"
        android:text="Jiyong Lee"
        android:textColor="#6E6D71"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/reply_reply_recyclerview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reply_reply_recyclerview_profile_name"
        app:layout_constraintBottom_toTopOf="@+id/reply_reply_recyclerview_time"
        app:layout_constraintLeft_toRightOf="@+id/reply_reply_recyclerview_profile_img"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        android:text="짧은댓글"
        android:textColor="#000000"
        android:textSize="13sp"

        />
    <TextView
        android:id="@+id/reply_reply_recyclerview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reply_reply_recyclerview_content"
        app:layout_constraintLeft_toRightOf="@+id/reply_reply_recyclerview_profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="20분 전"
        android:textSize="12sp"
        android:textColor="#858585"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/reply_reply_bulb_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/small_bulb"
            app:layout_constraintRight_toLeftOf="@+id/reply_reply_bulb_count"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="4dp"
            />
        <TextView
            android:id="@+id/reply_reply_bulb_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/reply_reply_bulb_btn"
            app:layout_constraintRight_toRightOf="parent"
            android:text="60"
            android:textColor="#908F95"
            android:textSize="10dp"
            android:layout_marginLeft="4dp"
            />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#ADB0B2"
        android:layout_marginStart="60dp" />


</android.support.constraint.ConstraintLayout>