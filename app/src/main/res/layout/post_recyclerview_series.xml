<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/series_previous_btn"
        android:layout_width="94dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/previous1"
        />

    <Button
        android:id="@+id/series_view_btn"
        android:layout_width="174dp"
        android:layout_height="47dp"
        app:layout_constraintLeft_toRightOf="@id/series_previous_btn"
        app:layout_constraintRight_toLeftOf="@+id/series_next_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/series"
        />

    <Button
        android:id="@+id/series_next_btn"
        android:layout_width="94dp"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/next1"
        />

</android.support.constraint.ConstraintLayout>