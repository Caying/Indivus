<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myspace_profile_cardview"
    android:layout_width="300dp"
    android:layout_height="434dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="#efefef"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="54dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/myspace_profile_cardview_top_img"
            android:src="@drawable/imageex1"
            android:background="#ffffff"
            android:layout_width="300dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <LinearLayout
            android:id="@+id/myspace_profile_cardview_layout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="93dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ImageView
                android:id="@+id/myspace_profile_cardview_profile_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:background="#ffffff"
                android:src="@drawable/mainkey_c"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="2dp"
                />

            <android.support.constraint.ConstraintLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="104dp"
                android:layout_marginRight="12dp"
                >
                <TextView
                    android:id="@+id/myspace_profile_cardview_following"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="팔로잉"
                    android:textSize="9sp"
                    android:textColor="#95989a"
                    />
                <TextView
                    android:id="@+id/myspace_profile_cardview_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/myspace_profile_cardview_following"
                    app:layout_constraintRight_toRightOf="@+id/myspace_profile_cardview_following"
                    android:text="150"
                    android:textSize="12sp"
                    android:textColor="#95989a"
                    />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#95989a"
                    />
                <TextView
                    android:id="@+id/myspace_profile_cardview_follower"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="팔로워"
                    android:textSize="9sp"
                    android:textColor="#95989a"
                    />
                <TextView
                    android:id="@+id/myspace_profile_cardview_follower_count"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/myspace_profile_cardview_follower"
                    app:layout_constraintRight_toRightOf="@+id/myspace_profile_cardview_follower"
                    android:text="50"
                    android:textColor="#95989a"
                    android:textSize="12sp"


                    />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/myspace_profile_cardview_job"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/myspace_profile_cardview_layout2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:text="PM, 소설 창작"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp" />
        <TextView
            android:id="@+id/myspace_profile_cardview_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BrandLee"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/myspace_profile_cardview_job"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp" />
        <TextView
            android:id="@+id/myspace_profile_cardvidw_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="스윗해지고싶습니다."
            android:textSize="15sp"
            android:textColor="#000000"
            android:maxLines="7"
            app:layout_constraintTop_toBottomOf="@+id/myspace_profile_cardview_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp" />
        <TextView
            android:id="@+id/myspace_profile_cardvidw_awards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="스윗해지고싶습니다.\n\n\n\nㅎㅇㅎㅇ"
            android:textSize="15sp"
            android:textColor="#000000"
            android:maxLines="7"
            app:layout_constraintTop_toBottomOf="@+id/myspace_profile_cardvidw_comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp" />




    </android.support.constraint.ConstraintLayout>






</android.support.v7.widget.CardView>