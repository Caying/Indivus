<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="134dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"

    >
    <ImageView
        android:id="@+id/item_myspace_scrollview_img"
        android:layout_width="134dp"
        android:layout_height="92dp"
        android:background="@drawable/background_white_round_box_r8"
        android:src="#95989A"
        android:scaleType="center"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/item_myspace_scrollview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="6dp"
        android:text="In the storm"
        android:textColor="#000000"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/item_myspace_scrollview_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="7작품"
        android:textColor="#000000"
        android:textSize="8sp"
        />

</LinearLayout>