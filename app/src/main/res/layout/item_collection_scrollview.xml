<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/background_white_round_box_r5"
    >

    <ImageView
        android:id="@+id/item_collection_image"
        android:layout_width="108dp"
        android:layout_height="72dp"
        android:src="@drawable/imageex1"
        android:background="@drawable/background_white_left_round_box_r5"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/item_collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="series_title"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@+id/item_collection_image"
        app:layout_constraintLeft_toRightOf="@+id/item_collection_image"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"
        />


    <TextView
        android:id="@+id/item_collection_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016. 5. 5"
        android:textSize="8sp"
        android:textColor="#95989a"
        app:layout_constraintLeft_toRightOf="@+id/item_collection_image"
        app:layout_constraintBottom_toBottomOf="@+id/item_collection_image"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="7dp"
        />

    <TextView
        android:id="@+id/item_collection_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회수"
        android:textSize="8sp"
        android:textColor="#95989a"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_collection_image"
        app:layout_constraintLeft_toRightOf="@+id/item_collection_date"/>

    <TextView
        android:id="@+id/item_collection_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/item_collection_view"
        app:layout_constraintLeft_toRightOf="@+id/item_collection_view"
        android:layout_marginLeft="3dp"
        android:text="200"
        android:textColor="#95989a"
        android:textSize="8sp"/>


    <Button
        android:id="@+id/item_collection_bulb_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/small_bulb"
        android:layout_marginRight="10dp"
        android:layout_marginTop="19dp"
        />
    <TextView
        android:id="@+id/item_collection_bulb_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="63"
        android:textColor="#95989a"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="@+id/item_collection_bulb_btn"
        app:layout_constraintLeft_toLeftOf="@+id/item_collection_bulb_btn"
        app:layout_constraintTop_toBottomOf="@+id/item_collection_bulb_btn"
        />

</android.support.constraint.ConstraintLayout>