<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="348dp"
    android:layout_height="58dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:padding="11dp"
    android:background="@drawable/background_white_round_box_r5">

    <ImageView
        android:id="@+id/item_follower_recyclerview_profile_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12sp"
        android:src="@drawable/imageex4"
        android:background="@drawable/background_white_round_box_r8"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"

        />

    <TextView
        android:id="@+id/item_follower_recyclerview_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand creator"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toRightOf="@+id/item_follower_recyclerview_profile_img"
        app:layout_constraintBottom_toTopOf="@+id/item_follower_recyclerview_profile_job"
        />
    <TextView
        android:id="@+id/item_follower_recyclerview_profile_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM, 소설 창작"
        android:textSize="11sp"
        android:textColor="#000000"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toRightOf="@+id/item_follower_recyclerview_profile_img"
        app:layout_constraintBottom_toBottomOf="@+id/item_follower_recyclerview_profile_img"
        />
    <Button
        android:id="@+id/item_follower_recyclerview_follow_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/follow"
        android:layout_marginRight="12dp"
        />

</android.support.constraint.ConstraintLayout>