<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="434dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="#efefef"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="54dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="77dp"
            >

            <TextView
                android:id="@+id/myspace_manage_name_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="61dp"
                android:text="이름"
                android:textColor="#000000"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/myspace_manage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                app:layout_constraintTop_toTopOf="@+id/myspace_manage_name_index"
                app:layout_constraintLeft_toRightOf="@+id/myspace_manage_name_index"
                android:text="이충엽"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/myspace_manage_job_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myspace_manage_name_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name_index"
                android:text="분야"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/myspace_manage_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/myspace_manage_job_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name"
                android:text="PM, 소설 창작"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/myspace_manage_birth_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myspace_manage_job_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name_index"
                android:text="생년월일"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/myspace_manage_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/myspace_manage_birth_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name"
                android:text="1992.03.25."
                android:textColor="#000000"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/myspace_manage_gender_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myspace_manage_birth_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name_index"
                android:text="성별"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/myspace_manage_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/myspace_manage_gender_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name"
                android:text="남자"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/myspace_manage_phone_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myspace_manage_gender_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name_index"
                android:text="연락처"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/myspace_manage_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/myspace_manage_phone_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name"
                android:text="010-5353-7537"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/myspace_manage_email_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myspace_manage_phone_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name_index"
                android:text="이메일"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/myspace_manage_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/myspace_manage_email_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name"
                android:text="iboho@naver.com"
                android:textColor="#000000"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/myspace_manage_locate_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/myspace_manage_email_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name_index"
                android:text="활동지역"
                android:textColor="#000000"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/myspace_manage_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/myspace_manage_locate_index"
                app:layout_constraintLeft_toLeftOf="@+id/myspace_manage_name"
                android:text="서울"
                android:textColor="#000000"
                android:textSize="10sp"/>

        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/myspace_manage_collection_btn"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:layout_marginTop="77dp"
            android:background="@drawable/collection_button"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/myspace_manage_closet_btn"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:background="@drawable/closet_button"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>



</android.support.v7.widget.CardView>