<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_button_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#efefefef">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#95989a"
        />
    <Button
        android:id="@+id/post_bulb_btn"
        android:layout_height="36dp"
        android:layout_width="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/post_reply_btn"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="73dp"
        android:background="@drawable/detailview_bulb" />
    <TextView
        android:id="@+id/post_bulb_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/post_bulb_btn"
        app:layout_constraintTop_toTopOf="@+id/post_bulb_btn"
        app:layout_constraintBottom_toBottomOf="@+id/post_bulb_btn"/>
    <Button
        android:id="@+id/post_reply_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/post_bulb_btn"
        app:layout_constraintRight_toLeftOf="@+id/post_collect_btn"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/detailview_reply" />
    <TextView
        android:id="@+id/post_reply_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textSize="12sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/post_reply_btn"
        app:layout_constraintTop_toTopOf="@+id/post_reply_btn"
        app:layout_constraintBottom_toBottomOf="@+id/post_reply_btn"/>
    <Button
        android:id="@+id/post_collect_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/post_reply_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="74dp"
        android:layout_marginRight="63dp"
        android:background="@drawable/detailview_collect" />
    <TextView
        android:id="@+id/post_collect_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textSize="12sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toRightOf="@+id/post_collect_btn"
        app:layout_constraintTop_toTopOf="@+id/post_collect_btn"
        app:layout_constraintBottom_toBottomOf="@+id/post_collect_btn"/>


</android.support.constraint.ConstraintLayout>